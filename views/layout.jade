doctype html
html(ng-app="waf")
    head
        base(href="/")
        title=title
        script.
            function inIframe() {
                try {
                    return window.self !== window.top;
                } catch (e) {
                    return true;
                }
            }
            //Mobile user stays on site, Desktop one goes to the facebook apps.
            if (!/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) && !inIframe()) {
                var parser = document.createElement('a');
                parser.href = window.location.href;
                var url = 'https://apps.facebook.com/wearefreemerci' + parser.pathname;
                //redirect desktop user to page tab
                window.location.href = url;
            }
        block links
            link(rel='stylesheet', href='/css/app.css')
            link(rel='stylesheet', href='/css/jquery/jquery-ui-1.10.4.custom.min.css')
        
        block fb-meta
            if(getLocale() === 'en')
                meta(property="og:locale", content="en_US")
                meta(property="og:locale:alternate", content="fr_FR")
            else
                meta(property="og:locale", content="fr_FR")
                meta(property="og:locale:alternate", content="en_US")
    body(class=getLocale())
        block content
            div.footer
                div.visitRegion
                p!=__('footer_text', '<a href="/images/'+ __('tos_file') +'">', '</a>')
        
        script(src='/javascripts/jquery.min.js')        
        script(src='/javascripts/jquery-ui-1.10.4.custom.min.js')    
        script(src='/javascripts/jquery.cycle2.min.js')    
        script(src='/javascripts/angular/angular.min.js')        
        script(src='/javascripts/angular-file-upload/angular-file-upload.min.js')        
        script(src='/javascripts/angular/angular-route.min.js')        
        script(src='/javascripts/app.js')
        div#fb-root
        script.
            window.fbAsyncInit = function() {
              FB.init({
                appId      : '447432635359214',
                status     : true,
                xfbml      : true
              });
            };
            (function(d, s, id){
               var js, fjs = d.getElementsByTagName(s)[0];
